@model TourGuide.Models.Location

@{
    ViewBag.Title = "Details";
}

<h2>Location</h2>
<h2>Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
        </div>
        <table class="table">
            <tr>
                <th>

                    @Html.DisplayNameFor(model => model.Hotel.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hotel.Address)
                </th>
            </tr>
            @foreach (var item in Model.Hotels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                </tr>
            }
        </table>
        </div>

        <div class="panel panel-success">
            <div class="panel-heading">
            </div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Restaurant.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Restaurant.Address)
                    </th>
                </tr>
                @foreach (var item in Model.Restaurants)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                    </tr>
                }
            </table>
            </div>


        <p>
            @if (User.Identity.Name == "teamproject@tourguide.com")
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
            }
            &nbsp;
            @Html.ActionLink("Back to List", "Index")
        </p>
